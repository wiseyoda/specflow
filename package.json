{
  "name": "specflow",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @specflow/dashboard dev",
    "dev:cli": "pnpm --filter @specflow/cli dev",
    "build": "pnpm --filter @specflow/shared build && pnpm --filter @specflow/cli build && pnpm --filter @specflow/dashboard build",
    "build:cli": "pnpm --filter @specflow/cli build",
    "test:cli": "pnpm --filter @specflow/cli test",
    "start": "pnpm --filter @specflow/dashboard start",
    "lint": "pnpm --filter @specflow/dashboard lint"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
