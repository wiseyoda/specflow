#!/usr/bin/env bash
#
# speckit - Unified CLI for SpecKit operations
#
# Usage: speckit <command> [subcommand] [options]
#
# Commands:
#   state       State file operations (get, set, init, reset)
#   scaffold    Create project structure
#   context     Get current feature context (branch, paths, docs)
#   feature     Feature operations (create)
#   git         Git operations (branch, commit, merge, push)
#   roadmap     ROADMAP.md operations (status, update, next)
#   claude-md   CLAUDE.md operations (update, sync)
#   checklist   Checklist status and operations
#   tasks       Task tracking operations
#   templates   Template versioning (check, update, diff)
#   doctor      Diagnostics and auto-fix
#   detect      Detect existing content and documentation
#   reconcile   Reconcile state with file system
#   memory      Memory document operations (init, list, check)
#   pdr         PDR (Product Design Requirements) operations
#   phase       Phase detail operations (show, list, archive)
#   issue       Local issue tracking (show, list, create, close)
#   help        Show this help message
#   version     Show version
#
# Examples:
#   speckit state get
#   speckit git branch create 002-flow-engine
#   speckit roadmap update 002 complete
#   speckit doctor --fix
#

set -euo pipefail

# Determine script directory (resolves symlinks)
SCRIPT_DIR="$(cd "$(dirname "$(readlink -f "${BASH_SOURCE[0]}" 2>/dev/null || echo "${BASH_SOURCE[0]}")")" && pwd)"
readonly SCRIPT_DIR

# Version - read from VERSION file or fallback
get_version() {
  local version_file="${SCRIPT_DIR}/../VERSION"
  if [[ -f "$version_file" ]]; then
    cat "$version_file" | tr -d '\n'
  else
    echo "2.0.0"
  fi
}
readonly SPECKIT_VERSION="$(get_version)"

# Scripts directory
readonly SCRIPTS_DIR="${SCRIPT_DIR}/../scripts/bash"

# Source common library
if [[ -f "${SCRIPTS_DIR}/lib/common.sh" ]]; then
  source "${SCRIPTS_DIR}/lib/common.sh"
else
  # Minimal fallback if common.sh doesn't exist yet
  log_error() { echo "ERROR: $*" >&2; }
  log_info() { echo "$*"; }
  log_warn() { echo "WARN: $*" >&2; }
fi

# Show help
show_help() {
  cat << 'EOF'
speckit - Unified CLI for SpecKit operations

USAGE:
    speckit <command> [subcommand] [options]

COMMANDS:
    state       State file operations
                  get [key]           Show state (or specific key)
                  set <key>=<value>   Update state value
                  init                Initialize new state file
                  reset               Reset state to defaults

    scaffold    Create project structure
                  [--force]           Recreate (overwrites existing)

    context     Get current feature context
                  [--json]            Output as JSON
                  [--require-spec]    Require spec.md
                  [--require-plan]    Require plan.md
                  [--require-tasks]   Require tasks.md

    feature     Feature operations
                  create <phase> <n>  Create new feature directory
                                      Phase: 0010, 0020, etc. (4-digit)
                                      Name: kebab-case name

    git         Git operations
                  branch create <n>   Create and checkout branch
                  branch checkout <n> Checkout existing branch
                  commit <message>    Stage all and commit
                  merge <branch>      Merge branch to current
                  push                Push current branch
                  sync                Fetch all, show status

    roadmap     ROADMAP.md operations
                  status              Show all phase statuses
                  next                Get next pending phase
                  update <p> <s>      Update phase status
                  validate            Check ROADMAP.md structure

    claude-md   CLAUDE.md operations
                  update <text>       Add to Recent Changes
                  sync                Sync from ROADMAP completions

    checklist   Checklist operations
                  status [dir]        Show completion status
                  list [dir]          List all checklists
                  incomplete [dir]    List incomplete items

    tasks       Task operations
                  status [file]       Show completion status
                  incomplete [file]   List incomplete tasks
                  mark <id>           Mark task complete
                  phase-status        Status by phase

    templates   Template versioning
                  check               Check for updates
                  update [file]       Update template(s)
                  diff <file>         Show differences

    doctor      Diagnostics and fixes
                  [--fix]             Auto-fix issues
                  [--check <area>]    Check specific area

    status      Comprehensive project status (for orchestrate)
                  [--json]            JSON output
                  [--quick]           Skip deep validation

    detect      Detect existing content
                  [--check <area>]    Check specific area (system, speckit, docs, files, state)

    reconcile   Reconcile state with files
                  [--dry-run]         Preview changes only
                  [--trust-files]     Trust file system over state
                  [--trust-state]     Trust state over file system

    memory      Memory document operations
                  init <doc>          Initialize document(s)
                                      (constitution, tech-stack, recommended, all)
                  list                List documents with status
                  check               Check document health

    lessons     Lessons learned operations
                  init                Initialize lessons-learned.md
                  add <type> <desc>   Add entry (error, decision, gotcha)
                  check <keyword>     Search lessons
                  list                List all entries

    gate        Validation gate enforcement
                  specify             Validate spec.md before planning
                  plan                Validate plan.md before tasks
                  tasks               Validate tasks.md before implement
                  implement           Validate before verification
                  all                 Run all applicable gates
                  status              Show gate status

    migrate     Migration utilities
                  roadmap             Migrate ROADMAP.md from 2.0 to 2.1
                                      (converts 3-digit to 4-digit phases)

    import      Import existing documentation
                  adrs <path>         Import Architecture Decision Records
                                      [--dry-run] [--force]

    manifest    Version manifest operations
                  init                Create manifest.json
                  get [key]           Get version info
                  set <key> <val>     Set version value
                  validate            Validate compatibility
                  upgrade             Apply available upgrades
                  status              Show version status

    pdr         PDR (Product Design Requirements) operations
                  list                List all PDRs with status
                  status              Show PDR summary (counts)
                  show <file>         Show PDR details
                  validate <file>     Validate PDR structure
                  path                Show PDR directory path
                  init                Create PDR directory

    phase       Phase detail operations
                  show <phase>        Show phase details
                  list [--active]     List phases with status
                  archive <phase>     Archive phase to HISTORY.md
                  create <n> <name>   Create new phase detail file
                  migrate             Migrate ROADMAP.md to modular format
                  path [phase]        Show phase file path

    issue       Local issue tracking
                  list [--open]       List issues with status
                  show <id>           Show issue details
                  create "<title>"    Create new issue
                  close <id>          Close an issue
                  update <id>         Update issue fields
                  migrate             Migrate issues from ROADMAP.md
                  path [id]           Show issue file path

    help        Show this help message
    version     Show version

OPTIONS:
    -h, --help      Show help for command
    --json          Output in JSON format (where supported)
    -v, --verbose   Verbose output

EXAMPLES:
    speckit state get config
    speckit git branch create 0020-flow-engine
    speckit roadmap update 0020 complete
    speckit checklist status
    speckit doctor --fix

TIP: In Claude Code, run /speckit.start to auto-detect project state and route
     to the appropriate workflow.

For more information, see: ~/.claude/speckit-system/README.md
EOF
}

# Show version
show_version() {
  echo "speckit version ${SPECKIT_VERSION}"
}

# Execute a subcommand script
run_script() {
  local script_name="$1"
  shift
  local script_path="${SCRIPTS_DIR}/speckit-${script_name}.sh"

  if [[ -f "${script_path}" ]]; then
    exec bash "${script_path}" "$@"
  else
    log_error "Script not found: ${script_path}"
    log_error "Command '${script_name}' is not yet implemented."
    exit 1
  fi
}

# Main entry point
main() {
  # No arguments - show help
  if [[ $# -eq 0 ]]; then
    show_help
    exit 0
  fi

  local command="$1"
  shift

  case "${command}" in
    state)
      run_script "state" "$@"
      ;;
    scaffold)
      run_script "scaffold" "$@"
      ;;
    context|ctx)
      run_script "context" "$@"
      ;;
    feature|feat)
      run_script "feature" "$@"
      ;;
    git)
      run_script "git" "$@"
      ;;
    roadmap)
      run_script "roadmap" "$@"
      ;;
    claude-md|claudemd)
      run_script "claude-md" "$@"
      ;;
    checklist)
      run_script "checklist" "$@"
      ;;
    tasks)
      run_script "tasks" "$@"
      ;;
    templates)
      run_script "templates" "$@"
      ;;
    doctor)
      run_script "doctor" "$@"
      ;;
    status)
      run_script "status" "$@"
      ;;
    detect)
      run_script "detect" "$@"
      ;;
    reconcile)
      run_script "reconcile" "$@"
      ;;
    memory|mem)
      run_script "memory" "$@"
      ;;
    lessons)
      run_script "lessons" "$@"
      ;;
    gate)
      run_script "gate" "$@"
      ;;
    migrate)
      run_script "migrate" "$@"
      ;;
    manifest)
      run_script "manifest" "$@"
      ;;
    import)
      run_script "import" "$@"
      ;;
    pdr)
      run_script "pdr" "$@"
      ;;
    phase)
      run_script "phase" "$@"
      ;;
    issue)
      run_script "issue" "$@"
      ;;
    help|--help|-h)
      show_help
      exit 0
      ;;
    version|--version|-V)
      show_version
      exit 0
      ;;
    # Slash commands - these are Claude Code prompts, not CLI commands
    analyze|specify|clarify|plan|implement|verify|orchestrate|init|constitution|start|phase)
      log_error "Unknown command: ${command}"
      echo ""
      log_info "'${command}' is a Claude Code slash command, not a CLI command."
      log_info "In Claude Code, type: /speckit.${command}"
      log_info ""
      log_info "The 'speckit' CLI provides utility commands like:"
      log_info "  speckit state, speckit tasks, speckit roadmap, speckit checklist"
      log_info ""
      log_info "Run 'speckit help' for all available CLI commands."
      exit 1
      ;;
    *)
      log_error "Unknown command: ${command}"
      echo ""
      echo "Run 'speckit help' for usage information."
      exit 1
      ;;
  esac
}

main "$@"
